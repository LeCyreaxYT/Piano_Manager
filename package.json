{
  "name": "piano_manager",
  "version": "1.0.1",
  "author": {
    "name": "DerEchteAlec",
    "email": "alecschitzkat@icloud.com",
    "url": "https://lecyreaxyt.de"
  },
  "description": "Ein Piano Bot der von VirtualPiano.net die Noten abspielt",
  "main": "dist-electron/main/index.js",
  "license": "MIT",
  "private": true,
  "build": {
    "productName": "Piano Manager",
    "appId": "de.lecyreaxyt.piano_manager",
    "win": {
      "target": [
        "nsis",
        "msi"
      ],
      "icon": "./dist-build/logo.ico"
    },
    "msi": {
      "oneClick": false,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "debug": {
    "env": {
      "VITE_DEV_SERVER_URL": "http://127.0.0.1:3344/"
    }
  },
  "scripts": {
    "build:sass": "sass --no-source-map ./src/assets/scss:./src/assets --style=expanded",
    "watch:sass": "sass --watch --poll ./src/assets/scss:./src/assets --no-source-map --style=expanded",
    "dev:vite": "vite",
    "dev": "concurrently \"yarn dev:vite\" \"yarn watch:sass\"",
    "build": "yarn build:sass && vue-tsc --noEmit && vite build && electron-builder --x64",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@vue/devtools": "^8.0.5",
    "concurrently": "^9.2.1",
    "electron": "^latest",
    "electron-builder": "^latest",
    "sass": "^1.94.2",
    "typescript": "^5.9.3",
    "vite": "^7.2.6",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vue": "^3.5.25",
    "vue-router": "4",
    "vue-tsc": "^3.1.6"
  },
  "dependencies": {
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.38.8",
    "@nut-tree-fork/nut-js": "^4.2.6",
    "@tailwindcss/vite": "^4.1.17",
    "@vitejs/plugin-vue": "^6.0.2",
    "codemirror": "^6.0.2",
    "pinia": "^3.0.4",
    "promise-worker": "^2.0.1",
    "tailwindcss": "^4.1.17"
  }
}
