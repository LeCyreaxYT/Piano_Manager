{
  "name": "piano_manager",
  "version": "2.0.0",
  "author": {
    "name": "DerEchteAlec",
    "email": "alecschitzkat@icloud.com",
    "url": "https://lecyreaxyt.de"
  },
  "description": "Ein Piano Bot der von VirtualPiano.net die Noten abspielt",
  "main": "dist-electron/main/index.js",
  "license": "MIT",
  "private": true,
  "build": {
    "productName": "Piano Manager",
    "appId": "de.lecyreaxyt.piano_manager",
    "win": {
      "target": [
        "nsis",
        "msi"
      ],
      "icon": "./dist-build/logo.ico"
    },
    "msi": {
      "oneClick": false,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "debug": {
    "env": {
      "VITE_DEV_SERVER_URL": "http://127.0.0.1:3344/"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build && electron-builder",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/devtools": "^6.0.0-beta.21",
    "autoprefixer": "^10.4.14",
    "custom-electron-titlebar": "^4.2.3",
    "electron": "^latest",
    "electron-builder": "^latest",
    "flowbite": "^1.7.0",
    "sass": "^1.63.6",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.1.6",
    "vite": "^4.4.2",
    "vite-plugin-electron": "^0.12.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue": "^3.3.4",
    "vue-router": "4",
    "vue-tsc": "^1.8.4"
  },
  "dependencies": {
    "keysender": "^2.3.0"
  }
}
